element PlayerUI
{
	size = 100%
	position = (-1, -1)
	allAlign = centered

	child UIBackground
	{
		width = 200px
		height = 20px
		allAlign = centered
		color = (1, 0, 0)
		opacity = 0.5

		corners = 5px

		child UIText txt
		{
			color = 0
			text = "Woah UI!"
			size = 15px
		}
	}
	script
	{
		MyObject? player = null
		fn new(MyObject player)
		{
			this.player = player
			this.txt.setText("woah")
		}

		override fn update()
		{
			txt.setText($"health: {player.health}")
		}
	}
}
