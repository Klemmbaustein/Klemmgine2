using engine
using engine::input
using system::io

module game

fn test()
{
}

class MyObject : SceneObject
{
	[Export]
	string message = "hi"

	MoveComponent movement = new MoveComponent()

	override fn begin()
	{
		const testMesh = new MeshComponent()
		testMesh.load(new AssetRef("Assets/cube.kmdl"))
		attach(testMesh)

		attach(movement)

		warn("cool message: " + message)
	}

	override fn update()
	{
		if isKeyDown(Key::e)
		{
			movement.addInput(vec3(0, 0, 1))
		}
	}

	override fn destroy()
	{
		test()
	}
}