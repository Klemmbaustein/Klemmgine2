using engine
using engine::input
using system::io

module game

fn test()
{
}

class MyObject : SceneObject
{
	[Export]
	AssetRef testModel = emptyExtension("kmdl")

	MoveComponent movement = new MoveComponent()

	override fn begin()
	{
		const testMesh = new MeshComponent()
		testMesh.load(testModel)
		attach(testMesh)

		attach(movement)
	}

	override fn update()
	{
		if isKeyDown(Key::e)
		{
			movement.addInput(vec3(0, 0, 1))
		}
	}

	override fn destroy()
	{
		test()
	}
}