element ItemBrowserHeading
{
	var PathText = "some/path/";
	var PathWrapping = 100px;

	width = 100%;
	orientation = vertical;
	child UIBox
	{
		width = 100%;
		orientation = horizontal;
		verticalAlign = centered;
		child UIButton backButton
		{
			size = 20px;
			padding = 6px;
			color = Color_Text;
			image = "Engine/Editor/Assets/ExitFolder.png"
		}
		child UIText
		{
			size = 12px;
			color = Color_Text;
			padding = 6px;
			leftPadding = 0;
			text = PathText;
			wrap = PathWrapping;
		}
	}
	child EditorTextField searchBox
	{
		HintText = "Search";
		Image = "Engine/Editor/Assets/Search.png";
		Size = 200px;
		padding = 5px;
	}

	child UIBackground
	{
		width = 100%;
		height = 1px;
		padding = 1px;
		color = Color_BackgroundHighlight;
	}
}

element ItemBrowserButton
{
	var Name = "Name";
	var Color = (1, 0, 0);
	var BackgroundColor = 0.1;
	var Image;

	child UIButton button
	{
		leftPadding = 10px;
		upPadding = 10px;
		color = BackgroundColor;
		size = (80, 120)px;
		orientation = vertical;

		corners = 5px;

		child UIBackground
		{
			corners = 5px;
			color = Color;
			size = 72px;
			padding = 4px;
			downPadding = 2px;
			allAlign = centered;

			child UIBackground
			{
				size = 66px;
				image = Image;
				color = 1;
			}
		}
		child UIText
		{
			text = Name;
			color = Color_Text;
			wrap = 76px;
			padding = 2px;
			upPadding = 0;
			size = 10px;
			maxWraps = 2;
		}
	}
}